{
    "ci": {
        "collect": {
            "url": ["http://localhost:8000/", "http://localhost:8000/calculator.html?name=bmi-bsa"],
            "startServerCommand": "npx http-server dist -p 8000 -c-1",
            "numberOfRuns": 1,
            "settings": {
                "preset": "desktop"
            }
        },
        "assert": {
            "assertions": {
                "categories:performance": ["warn", { "minScore": 0.9 }],
                "categories:accessibility": ["error", { "minScore": 0.95 }],
                "categories:best-practices": ["warn", { "minScore": 0.95 }]
            }
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}
