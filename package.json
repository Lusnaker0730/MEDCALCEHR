{
  "name": "medcalc-ehr",
  "version": "1.0.0",
  "type": "module",
  "description": "92 Clinical Calculators for Healthcare Professionals on FHIR",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8000 -c-1",
    "build:ts": "npx tsc -p tsconfig.json",
    "clean:ts": "powershell -ExecutionPolicy Bypass -File clean-ts-output.ps1",
    "rebuild:ts": "npm run clean:ts && npm run build:ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write \"js/**/*.js\" \"*.html\"",
    "format:check": "prettier --check \"js/**/*.js\" \"*.html\"",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lusnaker0730/MEDCALCEHR.git"
  },
  "keywords": [
    "medical",
    "calculator",
    "FHIR",
    "healthcare",
    "clinical",
    "EHR",
    "SMART-on-FHIR"
  ],
  "author": "CGMH",
  "license": "MIT",
  "dependencies": {
    "chart.js": "^4.4.1",
    "fhirclient": "^2.5.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@testing-library/dom": "^9.3.4",
    "eslint": "^8.56.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  }
}